root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
quote_type = double
spelling_language = en

# Python
[*.{py,pyw,pyi}]
indent_size = 4
max_line_length = 100

[*.{md,markdown}]
max_line_length = 100
trim_trailing_whitespace = false

# Makefiles (require tabs)
[Makefile,*.mk]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{sh,bash}]
shell_variant = bash
binary_next_line = true
switch_case_indent = true
keep_padding = false
space_redirects = false
function_next_line = false
